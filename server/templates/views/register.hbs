<!DOCTYPE html>
<html lang="en">

<head>
        {{>headers}}
        <title>User | Register</title>
        <link rel="stylesheet" href="/register.css">
</head>

<body>
        {{> navbar}}
        <div class="main-container">

        <div class="register-container">
                <i class="register-logo fa-solid fa-circle-plus"></i>
                <h1 class="register-header">REGISTER</h1>
                <form class="register-form" action="/register" method="POST">
                {{#if userExists}}
                <div class="register-invalid active"><i class="fa-solid fa-circle-exclamation"></i> User already exists. Try to Login</div>
                {{/if}}
                {{#if passLength}}
                <div class="register-invalid active"><i class="fa-solid fa-circle-exclamation"></i> Minimum 6 characters required in password.</div>
                {{/if}}
                {{#if passwordMatch}}
                <div class="register-invalid active"><i class="fa-solid fa-circle-exclamation"></i> Password did not match</div>
                {{/if}}

                <div class="register-grid">
                        <div class="register-field">
                                <label class="register-label">NAME</label><br>
                                <input class="register-input" name="name" type="text" required placeholder="Eg. Steve Jobs"><br>
                        </div>
                        <div class="register-field">
                                <label class="register-label">EMAIL</label><br>
                                <input class="register-input" name="email" type="email" required placeholder="example@gmail.com"><br>
                        </div>
                        <div class="register-field">
                                <label class="register-label">PASSWORD</label><br>
                                <input class="register-input" name="password" type="password" required placeholder="Min 6 characters"><br>
                        </div>
                        <div class="register-field">
                                <label class="register-label">CONFIRM PASSWORD</label><br>
                                <input class="register-input" name="password1" type="password" required><br>
                        </div>
                </div>
                        <div class="div">
                                <input class="register-input register-button" type="submit" class="btn btn-primary" value="REGISTER">
                        </div>
                        <div class="register-register-link">
                                <p>Already have an account?<a href="/login">Login</a></p>
                        </div>
                </form>
        </div>
        </div>
</body>

</html>